@using PagedList
@using PagedList.Mvc
@model IPagedList<MvcTakip.Models.tblKisi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="d-block img-fluid" src="~/img/resim1.jpg" style="width:900px; height:400px" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="~/img/resim2.jpg" style="width:900px; height:400px" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="~/img/resim3.jpg" style="width:900px; height:400px" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <a href="/Home/KisiDetay/@item.id"><img class="card-img-top" width="75" height="200" src="@item.Foto" alt=""></a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="/Home/KisiDetay/@item.id">@item.Adi @item.Soyadi</a>
                    </h4>
                    <h5>Agno: @item.Agno</h5>
                    <p class="card-text">Bölüm : @item.tblBolum.Bolum</p>
                    <p class="card-text">Staj 1 : @item.Staj1</p>
                    <p class="card-text">Staj 2 : @item.Staj2</p>
                    <p class="card-text">İş Yeri Eğitimi : @item.IsYeriEgitimi</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Mezuniyet Yılı: @item.MezunYil</small>
                </div>
            </div>
        </div>
    }
</div>
<div class="row">
    <div class="col-md-8 text-center">
        <div class="pagination-sm">
            @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page }), new PagedListRenderOptions
       {
           UlElementClasses = new string[] { "pagination" },
           LiElementClasses = new string[] { "page-link" }
          

       })
        </div>
    </div>
</div>



<style> 
    .card{
       
        box-shadow: 0px 0px 10px #007bff;
    }
</style>